{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*ready.*",
          "endsPattern": "^.*ready.*"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["run", "lint"],
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "format",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["run", "format"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "type-check",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["run", "type-check"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "db: push schema",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "db", "push"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "db: run migrations",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "db", "push", "--include-all"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "db: pull schema",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "db", "pull"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "db: generate types",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "gen", "types", "typescript", "--linked"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "db: reset local",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "db", "reset"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "db: view migrations",
      "type": "shell",
      "command": "ls",
      "args": ["-la", "supabase/migrations"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "db: create migration",
      "type": "shell",
      "command": "npx",
      "args": ["supabase", "migration", "new"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "seed: run",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["scripts/seed.ts"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "seed: clear",
      "type": "shell",
      "command": "~/.bun/bin/bun",
      "args": ["scripts/seed.ts", "--clear"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
